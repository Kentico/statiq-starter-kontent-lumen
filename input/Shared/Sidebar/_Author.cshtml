@using Kentico.Kontent.Statiq.Lumen.Models.ViewModels
@model SidebarViewModel
@{
    var author = Model.Author;
}

<div class="author">
    <a href="/">
        <img src="@author.AvatarImage.FirstOrDefault().Url"
             class="author__photo"
             width="75"
             height="75"
             alt="@author.Name" />
    </a>

    @if (Model.IsIndex)
    {
        <h1 class="author__title">
            <a class="author__title-link" href="/">@author.Name</a>
        </h1>
    }
    else
    {
        <h2 class="author__title">
            <a class="author__title-link" href="/">@author.Name</a>
        </h2>
    }
    <p class="author__subtitle">@author.Bio</p>
</div>