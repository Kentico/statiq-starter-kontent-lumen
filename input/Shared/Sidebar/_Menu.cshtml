@using Kentico.Kontent.Statiq.Lumen.Models
@model IEnumerable<MenuItem>

<nav class="menu">
    <ul class="menu__list">
        @foreach (var item in Model)
        {
            <li class="menu__list-item">
                <a href="@IExecutionContext.Current.GetLink(string.IsNullOrEmpty(item.Slug) ? "/" : item.Slug)"  class="menu__list-item-link @(item.Slug == ViewBag.ActiveMenuItem ? " active--exact  active" : "")">@item.Label</a>
            </li>
        }
    </ul>
</nav>