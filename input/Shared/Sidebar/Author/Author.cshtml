<div className={styles['author']}>
    <Link to="/">
    <img src={withPrefix(author.photo)}
         class="author__photo"
         width="75"
         height="75"
         alt={author.name} />
    </Link>

    { isIndex === true ? (
    <h1 class="author__title">
        <Link class="author__title-link" to="/">{author.name}</Link>
    </h1>
    ) : (
    <h2 class="author__title">
        <Link class="author__title-link" to="/">{author.name}</Link>
    </h2>
    )}
    <p class="author__subtitle">{author.bio}</p>
</div>