@using Kentico.Kontent.Statiq.Lumen.Models
@model Article
@{
    ViewData["Title"] = Model.Title;
}

@if (Model != null)
{
    <div>
        <div>
            <a href="/" class="article-single__home-button active">
                All Articles
            </a>
        </div>
        <div class="article-single">
            <div class="article-single__inner">
                <h1 class="article-single__title">@Html.DisplayFor(model => model.Title)</h1>
                <div class="article-single__body">
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <div data-kontent-element-codename="date" class="article-single__date">
                <em>
                    Published @Html.DisplayFor(model => model.Date)
                </em>
            </div>
        </div>
        <div class="article-single__footer">
            <div class="article-single__tags">
                <ul class="article-single__tags-list">
                    @foreach (var tag in Model.TagObjects)
                    {
                        <li class="article-single__tags-list-item"><a class="article-single__tags-list-item-link" href="@tag.Slug">@tag.Title</a></li>
                    }
                </ul>
            </div>
            <hr />
            <div class="article-single__footer-text">
                <p>
                    Pellentesque odio nisi, euismod in, pharetra a, ultricies in, diam. Sed arcu.
                    <a href="https://www.twitter.com/#" rel="noopener noreferrer" target="_blank"><br /><strong>John Doe</strong> on Twitter</a>
                </p>
            </div>
        </div>
    </div>
}

@section Head {
    @{ await Html.RenderPartialAsync("_SocialSharingMetadata", new SocialSharingMetadata(null, Model)); }
}

@section scripts {
}